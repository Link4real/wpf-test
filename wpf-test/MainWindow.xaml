<Window x:Class="wpf_test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_test"
        mc:Ignorable="d"
        Title="Hello World by Link4real" Height="431" Width="975">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,57,0,0" TextWrapping="Wrap" Text="Hello World!" VerticalAlignment="Top"/>
        <RadioButton x:Name="HelloButton" Content="Hello" IsChecked="True" HorizontalAlignment="Left" Margin="350,161,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="WorldButton" Content="World" HorizontalAlignment="Left" Margin="551,161,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.778,0.65"/>
        <Button Content="Display" HorizontalAlignment="Center" Margin="0,263,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Calendar HorizontalAlignment="Left" Margin="777,20,0,0" VerticalAlignment="Top"/>
        <ProgressBar HorizontalAlignment="Left" Height="17" Margin="266,355,0,0" VerticalAlignment="Top" Width="449"/>
    </Grid>
</Window>
